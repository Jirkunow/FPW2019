<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyPapers</servlet-name>
        <servlet-class>Controller.MyPapers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Gestione</servlet-name>
        <servlet-class>Controller.Gestione</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WritePaper</servlet-name>
        <servlet-class>Controller.WritePaper</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyPapers</servlet-name>
        <url-pattern>/articoli</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gestione</servlet-name>
        <url-pattern>/gestioneArticoli</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WritePaper</servlet-name>
        <url-pattern>/WritePaper</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            login.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
